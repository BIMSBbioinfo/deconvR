citHeader("To cite the deconvR package in publications please use:")

# Manual reference
year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
authors = "Veronika Ebenal, İrem B. Gündüz"
citEntry(
    entry="Manual",
    title = meta$Title,
    author = authors,
    year = year,
    version=meta$Version,
    note = "R package available on http://www.bioconductor.org/packages/release/deconvR/html/deconvR.html",
    textVersion=paste(authors, ". ", meta$Title, " (", year, ")", " R package version ", meta$Version, sep="")
)


citFooter("Thank you very much for using deconvR!,",
          "we appreciate if you remember to cite it in your paper! :)")
