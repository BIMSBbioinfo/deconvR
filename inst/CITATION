citHeader("To cite the deconvR package in publications please use:")
pkgVer <- function(pkg) {
    if (!exists("meta") || is.null(meta)) meta <- packageDescription(pkg)
    ver <- meta$Version
    paste0('https://github.com/BIMSBbioinfo/deconvR/', pkg, ' - R package version ', ver)
}

c(

    bibentry(bibtype="manual",
        title = "",
        author = personList(
        as.person("İrem B. Gündüz"),
        as.person("Veronika Ebenal")

        ),
        year = format(Sys.Date(), "%Y"),
        url = "http://www.bioconductor.org/packages/deconvR",
        note = pkgVer('deconvR'),
        doi = '10.18129/B9.bioc.deconvR'
    )
)

citFooter("Thank you very much for using deconvR!,",
          "we appreciate if you remember to cite it in your paper! :)")
